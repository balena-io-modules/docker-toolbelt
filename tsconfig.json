{
	"compilerOptions": {
		"module": "node20",
		"outDir": "build",
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2024",
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"include": [
		"lib/**/*.ts",
		"tests/**/*.ts",
		"typings/**/*.d.ts",
	]
}
